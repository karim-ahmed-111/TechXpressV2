@model TechXpress.Web.Models.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Welcome to TechXpress!</h1>
        <p class="lead text-muted">Your one-stop shop for the latest tech products</p>
    </div>

    <!-- Categories Section -->
    <div class="mb-5">
        <h2 class="fw-bold border-bottom pb-2 mb-4">Browse Categories</h2>
        <div class="row g-4">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-3 col-6">
                    <a href="/Products?categoryId=@category.Id" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm border-0 hover-shadow transition-all text-center">
                            <div class="card-body p-4">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 60px; height: 60px;">
                                    <i class="fas fa-laptop fs-4"></i>
                                </div>
                                <h5 class="card-title mb-1">@category.Name</h5>
                                <small class="text-muted">@(Model.Products.Count(p => p.CategoryId == category.Id)) items</small>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Products Section -->
    <div>
        <h3 class="fw-bold mb-4">Products</h3>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model.Products)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <!-- Product Image -->
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height:180px;">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid" style="max-height: 100%; width: auto;">
                            }
                            else
                            {
                                <i class="fa-solid fa-box-open fa-3x text-secondary"></i>
                            }
                        </div>

                        <!-- Product Content -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="text-muted mb-1">@product.Category?.Name</p>
                            <p class="card-text text-secondary small">@product.Description</p>

                            <!-- Price & Actions -->
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="fw-bold text-primary fs-5">$@product.Price.ToString("0.00")</span>
                                <div>
                                    <a href="/Products/Details/@product.Id" class="btn btn-outline-primary btn-sm me-1">
                                        <i class="fa fa-eye"></i> View
                                    </a>
                                    <form method="post" action="/Cart/Add" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="fa fa-cart-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

