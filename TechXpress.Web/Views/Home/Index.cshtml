        animation: pulse 3s infinite;
        z-index: -1;
    }
    
    .feature-card h4 {
        margin-bottom: 1rem;
        font-weight: 600;
    }
    
    .feature-card p {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }
    
    /* Brand section */
    .brands-container {
        display: flex;
