@model IEnumerable<TechXpress.Data.Entities.Order>
@{
    ViewData["Title"] = "Order History";
}
<style>
    .orders-card {
        background: var(--card-bg, #181a2b);
        color: #fff;
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0,0,0,0.25);
        border: 1px solid var(--card-border, #222a4d);
        padding: 2rem;
        margin-bottom: 2rem;
    }
    .table {
        background: transparent;
        color: #fff;
        border-radius: 1rem;
        overflow: hidden;
    }
    .table th, .table td {
        vertical-align: middle !important;
        color: #fff;
    }
    .btn-primary, .btn-sm {
        background: var(--primary-color, #0066ff) !important;
        border-color: var(--primary-color, #0066ff) !important;
        color: #fff !important;
        border-radius: 0.5rem;
    }
    .btn-primary:hover {
        background: var(--accent-color, #6e42e5) !important;
        border-color: var(--accent-color, #6e42e5) !important;
    }
</style>
<div class="orders-card">
    <h2 class="mb-4">Order History</h2>
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
                <td>$@order.TotalAmount</td>
                <td><a href="#" class="btn btn-primary btn-sm">Details</a></td>
            </tr>
        }
        </tbody>
    </table>
</div> 